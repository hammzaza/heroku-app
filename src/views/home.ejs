                  <use xlink:href="#piechart" mask="url(#piemask)" />
                  <text id="light-infrared" x="0.5" y="0.5" font-family="Roboto" font-size="0.3" fill="#888" text-anchor="middle" dy="0.1">82</text>
                </svg>
